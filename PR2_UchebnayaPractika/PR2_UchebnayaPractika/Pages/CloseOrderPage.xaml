<Page x:Class="PR2_UchebnayaPractika.Pages.CloseOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR2_UchebnayaPractika.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница закрытия заказа">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Имя оборудования:" Margin="0,5"/>
                <TextBox
                 IsEnabled="False"
          Height="25"
          x:Name="EquipmentTextBox" 
          Margin="0,0,0,10"
          />

                <TextBlock Text="Серийный номер оборудования:" Margin="0,5"/>
                <TextBox
          Height="25"
                 IsEnabled="False"
          x:Name="SerialNumberTextBox" 
          Margin="0,0,0,10"/>

                <TextBlock Text="Тип неисправности:" Margin="0,5"/>
                <TextBox 
                 IsEnabled="False"
          Height="25"
          x:Name="MalfunctionTextBox" 
          Margin="0,0,0,10"
          />

                <TextBlock 
             Text="Описание проблемы:" 
             />
                <TextBox
             x:Name="ProblemDescriptionTextBox" 
                 IsEnabled="False"
             AcceptsReturn="True" 
             TextWrapping="Wrap" 
             Height="80"
             VerticalScrollBarVisibility="Auto"
             Margin="0,0,0,10"/>

                <TextBlock 
Text="Заключение мастера:" 
/>
                <TextBox
x:Name="FinalyDecsription" 
AcceptsReturn="True" 
TextWrapping="Wrap" 
Height="76"
VerticalScrollBarVisibility="Auto"
Margin="0,0,0,10"/>


            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Ваш номер телефона:" Margin="0,5"/>
                <TextBox
          Height="25"
                 IsEnabled="False"
          x:Name="UserPhoneTextBox" 
          Margin="0,0,0,10"
          />
                <StackPanel Grid.Column="2">
                    <TextBlock 
                 Text="Приоритет:" 
                 Margin="0,5"/>
                    <ComboBox
                  Height="25"
                  x:Name="PriorityCmb" 
                  IsEnabled="False"
                  Margin="0,0,0,10"
                  />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock 
                 Text="Выбор специалиста:" 
                 Margin="0,5"/>
                    <ComboBox
                     Name="CpecialNameCmb"
                  Height="25"
                  IsEnabled="False"
                  Margin="0,0,0,10"
                  />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock 
                     Text="Ориентировачная дата:" 
                     Margin="0,5"/>

                    <DatePicker
                     Name="RoughDatePicker"
                        IsEnabled="False"/>

                </StackPanel>

                <Grid Grid.Column="2"
                            >
                    <TextBlock 
                     Text="Деталь" 
                     Margin="0,10,0,0"/>

                    <TextBlock
                     Text="Ко-во"
                     Margin="0,10,65,0"
                     HorizontalAlignment="Right"/>

                </Grid>

                <Grid Grid.Column="2">
                    <TextBox
                        Width="200"
                        HorizontalAlignment="Left"
                    Margin="0,5,0,0"
                        Name="MaterialNameTxb"/>

                    <TextBlock
                        Text="x"
                        HorizontalAlignment="Center"
                        Margin="100,5,0,0"/>

                    <TextBox
                        Width="100"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Right"
                        Name="MaterialCountTxb"/>

                </Grid>

                <Button
                    Name="BtnAddMaterial"
                    Click="BtnAddMaterial_Click"
                    Height="20"
                    Margin="0,5,0,0"
                    Content="Добавить"/>

                <TextBox
                    Margin="0,5,0,0"
                    VerticalScrollBarVisibility="Auto"
                    AcceptsReturn="True" 
                    TextWrapping="Wrap"
                    Height="70"
                    IsReadOnly="True"
                    Name="TotalMaterialsTxb"/>



            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button 
      x:Name="BtnBack" 
      Click="BtnBack_Click"
      Content="Отмена" 
      Width="100" 
      Margin="0,0,10,0" />
            <Button
          Content="Закрыть заказ"
          Name="BtnOrderClose"
          Click="BtnOrderClose_Click"
          
          Width="150" 
          Background="LightGreen" 
          Foreground="White"
          FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Page>
